        // ËÆæÁΩÆÂÖ®Â±ÄÂèòÈáè
        const relativePath = '@(ViewBag.RelativePath ?? "")';

        if (typeof initializeFileManager === 'function') {
            initializeFileManager(relativePath, '@Url.Action("Upload", "Home")');
