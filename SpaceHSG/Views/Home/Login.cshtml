@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}

<div class="login-page" id="loginPage">
    <div class="login-card">
        <div class="theme-toggle">
            <span id="toggleText">Light Mode</span>
            <label class="switch">
                <input type="checkbox" id="themeSwitch">
                <span class="slider round"></span>
            </label>
        </div>

        <div class="login-header">
            <h1>SpaceHSG</h1>
            <p>Share File Management System</p>
            <small style="color: gray;">Domain: hsg.local</small>
        </div>

        <form id="loginForm" autocomplete="off">
            <input type="text" style="display:none" aria-hidden="true">
            <input type="password" style="display:none" aria-hidden="true">

            <div class="form-group">
                <label>Domain Username</label>
                <input type="text" id="username" name="username"
                       placeholder="e.g. hsg\"
                       required readonly onfocus="this.removeAttribute('readonly')" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" id="password" name="password"
                       placeholder="Enter domain password"
                       required readonly onfocus="this.removeAttribute('readonly')" />
            </div>

            <button type="button" id="loginBtn" class="login-btn">
                Sign In
            </button>
        </form>
    </div>
</div>

<script src="~/js/Login/index.js" asp-append-version="true"></script>

<script>
    window.loginConfig = {
        loginUrl: '@Url.Action("Login", "Account")',
        homeUrl: '@Url.Action("Index", "Home")',
        checkSessionUrl: '@Url.Action("CheckSession", "Account")'
    };
</script>